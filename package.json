{
  "name": "ru-wiktionary-parser",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "clean": "rm -rf build",
    "format": "prettier . --write",
    "lint": "eslint",
    "lint:fix": "npm run lint -- --fix",
    "build:dev": "npm run clean && tsc -p tsconfig.dev.json",
    "build:dev:watch": "npm run build:dev -- --watch",
    "build:prod": "npm run clean && tsc -p tsconfig.prod.json"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/node": "^24.3.1",
    "eslint": "^9.35.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.2.0",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0"
  }
}
