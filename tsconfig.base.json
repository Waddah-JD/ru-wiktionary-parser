{
  "compilerOptions": {
    "outDir": "build",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "allowJs": false,
    "sourceMap": true,
    "declaration": false
  }
}
